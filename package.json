{
  "name": "@cucumber/cucumber-monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": [
    "messages/javascript",
    "message-streams/javascript",
    "gherkin/javascript",
    "gherkin-streams/javascript",
    "gherkin-utils/javascript",
    "cucumber-expressions/javascript",
    "tag-expressions/javascript",
    "create-meta/javascript",
    "fake-cucumber/javascript",
    "query/javascript",
    "compatibility-kit/javascript",
    "react/javascript",
    "html-formatter/javascript",
    "json-to-messages/javascript"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "./scripts/npm-each rm -rf dist acceptance && rm -rf node_modules package-lock.json",
    "test": "./scripts/npm-each npm test",
    "upgrade": "npm-check-updates --upgrade && ./scripts/npm-each npm-check-updates --upgrade",
    "eslint": "eslint --ext ts,tsx --max-warnings 0 packages/*/src packages/*/test",
    "eslint-fix": "eslint --ext ts,tsx --max-warnings 0 --fix packages/*/src packages/*/test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "npm-check-updates": "^11.1.8",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.1.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  }
}
